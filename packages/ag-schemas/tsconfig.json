{
  "compilerOptions": {
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "rootDir": "./",
    "noEmitOnError": false,
    "declaration": false,
    "sourceMap": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
  },
  "extends": "@ag/tsconfig/base.json",
  "include": ["./**/*"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
